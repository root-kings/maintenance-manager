html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Maintenance Manager
        base(href="/")
        include components/styles.pug
        

    //- body
    body.dark
        
        //- main.valign-wrapper.sky-blue
        main.valign-wrapper.sky-blue
                .row
                    
                    .col.offset-s1.s10.z-depth-5.card-panel.rounded

                        .container
                            form(action="/login", method="post").row
                                .col.s12
                                    h4.header.light.center Maintenance Manager
                                    h5.center Login
                                .input-field.col.s12
                                    i.material-icons.prefix.blue-text account_circle
                                    input#username.validate(name='username' type='text')
                                    label(for='username') Username
                                .input-field.col.s12
                                    i.material-icons.prefix.blue-text lock_circle
                                    input#password.validate(name='password' type='password')
                                    label(for='password') Password
                                .col.s12.center
                                    button.btn.btn-large.waves-effect.waves-light.blue.curvy(type='submit', name='action')
                                        | Login
                                    i.material-icons.right(style='width:50px')

        include components/scripts.pug
        