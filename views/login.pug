extend components/login.pug
    
block content
    div.valign-wrapper(style='height:100vh;background-image:linear-gradient(45deg, #36d1dc , #5b86e5)')

        .row
            .col.s1
            .col.s10.z-depth-5.white(style='border-radius:10px;padding:30px')
                
                .container(style='height=100px')
                    .row
                        h3.col.s12.center
                            | Login 
                        .input-field.col.s12
                            i.material-icons.prefix(style='color:#42a5f5') account_circle
                            input#username.validate(type='text')
                            label(for='username') User Name
                        .input-field.col.s12
                            i.material-icons.prefix(style='color:#42a5f5') lock_circle
                            input#pw.validate(type='text')
                            label(for='pw') Password
                        .col.s12.center
                            button.btn.waves-effect.waves-light(type='submit', name='action')(style='border-radius:64px;background-color:#42a5f5;height:50px')
                                | Login
i.material-icons.right(style='width:50px')